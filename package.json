{
  "name": "otp",
  "scripts": {
    "dev": "concurrently \"wrangler dev --ip 0.0.0.0 --live-reload\" \"bun build ./src/index.ts --outdir ./dist --minify --watch\"",
    "deploy": "wrangler deploy --minify",
    "build": "wrangler build && rm dist/README.md",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "concurrently": "^9.1.2",
    "hono": "^4.7.10",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250521.0",
    "wrangler": "^4.16.0"
  }
}
